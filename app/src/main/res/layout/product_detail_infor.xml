<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ProductPageActivity"
    tools:showIn="@layout/activity_product_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="horizontal|vertical"
    android:scrollbarStyle="outsideInset"
    android:fillViewport="true"
    android:background="@color/viewBg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <TableLayout
            android:id="@+id/tbl_product_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">
            <ImageView
                android:id="@+id/product_img_cover"
                android:layout_width="match_parent"
                android:layout_height="@dimen/product_img_cover"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"  />
            <!-- Price section -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="@android:color/white"
                android:minHeight="65dp">
                <LinearLayout
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_real_sale_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="29.000$"
                        android:textColor="@android:color/holo_orange_dark"
                        android:textSize="35sp"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txt_old_sale_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50.000$"
                            android:textColor="@android:color/tertiary_text_dark"
                            android:textSize="17sp"
                            android:background="@drawable/strike_through"/>
                        <TextView
                            android:id="@+id/txt_down_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-50%"
                            android:textColor="@android:color/black"
                            android:textSize="17sp"
                            android:layout_marginLeft="5dp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="right">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_heart_shape" />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_menu_share" />
                </LinearLayout>
            </TableRow>
            <!-- PRoduct Name section -->
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:background="@android:color/white"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txt_product_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên sản phẩm chỗ này nè ba........."
                        android:textSize="25sp"
                        android:layout_marginBottom="5dp"
                        android:background="@android:color/white"/>
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rating_bar"
                        android:stepSize="0.1"
                        android:max="5"
                        style="?android:attr/ratingBarStyleSmall"
                        />
                </LinearLayout>
            </TableRow>
            <!-- Description -->
            <TableRow
                android:layout_marginBottom="10dp"
                android:padding="10sp"
                android:background="@android:color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attributes"
                    android:textColor="@android:color/tertiary_text_dark"
                    android:textSize="17sp"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sadsakdjsakdjkajdksajdlkajdlksajdksajdlksajdlkjsadlkjsaldkadlksajdld"
                    android:textColor="@android:color/tertiary_text_dark"
                    android:textSize="15sp"
                    android:layout_marginRight="5dp"/>
            </TableRow>
            <TableRow
                android:background="@android:color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recommend for you"
                    android:textSize="25sp"
                    android:padding="10sp"
                    android:textStyle="italic"/>
            </TableRow>
            <RelativeLayout android:layout_below="@+id/tbl_product_information"
                android:background="@android:color/white">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_product_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:padding="10dp" />
            </RelativeLayout>
        </TableLayout>
    </LinearLayout>
</ScrollView>