<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical" >
<TableLayout
    android:id="@+id/tbl_order_checkout_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/order_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"  />
    <TableRow
        android:padding="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Order Information"
            android:textColor="@android:color/tertiary_text_dark"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:gravity="center"
            />
    </TableRow>
    <TableRow
        android:padding="10dp"
        android:weightSum="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Name"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/tertiary_text_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txt_proceed_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="Doan Nam Minh"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/tertiary_text_dark"
            android:textSize="20sp"
            />
    </TableRow>
    <TableRow
        android:padding="10dp"
        android:weightSum="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Order Date"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/tertiary_text_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txt_proceed_order_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="01/06/2019"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/tertiary_text_dark"
            android:textSize="20sp"
            />
    </TableRow>
    <TableRow
        android:padding="10dp"
        android:weightSum="1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Total"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/tertiary_text_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txt_proceed_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="10.000$"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/tertiary_text_dark"
            android:textSize="20sp"
            />
    </TableRow>
    <TableRow
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delivery Information"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/tertiary_text_dark"
                android:textSize="25sp"
                android:textStyle="italic|bold" />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <EditText android:id="@+id/input_delivery_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:layout_marginLeft="20dp"
                    android:hint="Your delivery adress"
                    android:textSize="20dp"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <EditText android:id="@+id/input_delivery_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_marginLeft="20dp"
                    android:hint="Your phone number"
                    android:textSize="20dp"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </TableRow>
</TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp">
        <Button
            android:id="@+id/btn_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order Now"
            android:background="@color/colorButton"
            android:textSize="25sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"></Button>
    </LinearLayout>
</LinearLayout>