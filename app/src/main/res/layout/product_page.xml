<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/viewBg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ProductPageActivity"
    tools:showIn="@layout/activity_product_page">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*">

        <ImageView
            android:id="@+id/product_img_cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/product_img_cover"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            app:layout_collapseMode="parallax" />

        <TableRow
            android:padding="10sp"
            android:background="@android:color/white"
            android:minHeight="65dp">
            <LinearLayout
                android:layout_span="3"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_real_sale_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="29.000$"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="35sp"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_old_sale_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50.000$"
                        android:textColor="@android:color/tertiary_text_dark"
                        android:textSize="17sp"
                        android:background="@drawable/strike_through"/>
                    <TextView
                        android:id="@+id/txt_down_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-50%"
                        android:textColor="@android:color/black"
                        android:textSize="17sp"
                        android:layout_marginLeft="5dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="1"
                android:orientation="horizontal"
                android:gravity="right">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_heart_shape"
                    android:layout_weight="1"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_share"
                    android:layout_weight="1"/>
            </LinearLayout>
        </TableRow>

        <TextView
            android:id="@+id/txt_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm chỗ này nè ba........."
            android:textSize="25sp"
            android:layout_marginBottom="10dp"
            android:padding="10sp"
            android:background="@android:color/white"/>

        <TableRow
            android:layout_marginBottom="10dp"
            android:padding="10sp"
            android:background="@android:color/white">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Attributes"
                android:textColor="@android:color/tertiary_text_dark"
                android:textSize="17sp"
                android:layout_marginRight="5dp"
                android:layout_span="1" />
            <TextView
                android:text="sadsakdjsakdjkajdksajdlkajdlksajdksajdlksajdlkjsadlkjsaldka
                    dlksajdlkjsalasdlk asdja kjdlksajdksadjlksajdlkaj a.daskdsahd"
                android:layout_span="6"
                android:layout_weight="1"
                android:textColor="@android:color/tertiary_text_dark"
                android:textSize="15sp"
                android:layout_marginRight="5dp"/>
        </TableRow>
        <TableRow
            android:layout_marginBottom="10dp"
            android:padding="10sp"
            android:background="@android:color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Description"
                android:textColor="@android:color/tertiary_text_dark"
                android:textSize="17sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/tertiary_text_dark"
                android:textSize="10sp"
                android:background="@drawable/strike_through"/>
            <!--<View-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="0dp"-->
                <!--android:layout_weight="1"-->
                <!--android:background="@drawable/strike_through" />-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sadsakdjsakdjkajdksajdlkajdlksajdksajdlksajdlkjsadlkjsaldka
                    dlksajdlkjsalasdlk asdja
                    kjdlksajdksadjlksajdlkaj a.daskdsahd
                    dsadsadasdsada
                    sadsadsadsa
                    sadsadsada
                    sadadsadasda
                    asdada"
                android:layout_weight="1"
                android:textColor="@android:color/tertiary_text_dark"
                android:textSize="15sp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>
        </TableRow>
    </TableLayout>

    <!-- Sticky button layout -->
    <LinearLayout
        android:id="@+id/sticky_footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="10dp"
        android:gravity="right">
        <Button
            android:id="@+id/btn_add_product_detail_cart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="Add to Cart"
            android:padding="10sp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
        <!--<View-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="1"-->
            <!--/>-->
        <Button
            android:id="@+id/btn_buy_now"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:text="Buy now >>"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:padding="10sp"
            android:textStyle="bold|italic" />
    </LinearLayout>
</RelativeLayout>