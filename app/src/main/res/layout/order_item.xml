<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/order_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginTop="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:layout_weight="25"
            android:id="@+id/img_checkout_product_thumbnail"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:layout_alignParentLeft="true"
            android:gravity="left"
            android:textSize="17sp"
            android:id="@+id/txt_checkout_product_name"
            android:inputType="textMultiLine"
            android:text="NNsdasdsakdjsada"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="17sp"
            android:id="@+id/txt_checkout_product_price"
            android:text="1212"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textSize="17sp"
            android:id="@+id/txt_checkout_qty"
            android:text="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textSize="17sp"
            android:id="@+id/txt_checkout_subtotal"
            android:text="1"/>
    </LinearLayout>
</android.support.v7.widget.CardView>